{% extends 'base.html.twig' %}

{% block title %}Destination
{% endblock %}

{% block body %}
	<h1>Destination</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ destination.id }}</td>
			</tr>
			<tr>
				<th>Country</th>
				<td>{{ destination.country }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ destination.city }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>
					<img class="img-fluid rounded mx-auto d-block max-width-height" src="{{destination.image}}" alt="paris" border="0">
				</td>
			</tr>

		</tbody>
	</table>

	<a class="btn btn-secondary" href="{{ path('app_destination_index') }}">back to list</a>

	<a class="btn btn-warning" href="{{ path('app_destination_edit', {'id': destination.id}) }}">edit</a>

	{{ include('destination/_delete_form.html.twig') }}
{% endblock %}
