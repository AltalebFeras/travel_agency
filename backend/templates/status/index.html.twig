{% extends 'base.html.twig' %}

{% block title %}Status index
{% endblock %}

{% block body %}
	<h1>Status index</h1>

	{% for message in app.flashes('successS') %}
		<div class="bg-success my-3">
			<h4>{{ message | join('. <br>') }}</h4>
		</div>
	{% endfor %}
	{% for message in app.flashes('errorS') %}
		<div class="bg-danger my-3">
			<h4>{{ message | join('. <br>') }}</h4>
		</div>
	{% endfor %}

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for status in statuses %}
				<tr>
					<td>{{ status.id }}</td>
					<td>{{ status.name }}</td>
					<td class="d-flex  align-items-center gap-3">

						<a class="btn btn-info" href="{{ path('app_status_show', {'id': status.id}) }}">show</a>
						<a class="btn btn-warning" href="{{ path('app_status_edit', {'id': status.id}) }}">edit</a>
						{{ include('status/_delete_form.html.twig') }}

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no Status found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_status_new') }}">Create new</a>
{% endblock %}
