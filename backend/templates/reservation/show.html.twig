    <table class="table">
        <tbody>
           
            <tr>
                <th>FirstName</th>
                <td>{{ reservation.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ reservation.lastName }}</td>
            </tr>
