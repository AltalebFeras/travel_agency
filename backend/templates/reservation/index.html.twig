{% extends 'base.html.twig' %}

{% block title %}Reservation index
{% endblock %}

{% block body %}
	<h1>All Reservations</h1>

	<table class="table">
		<thead>
			<tr>
				<th>FirstName</th>
				<th>LastName</th>
				<th>Telephone</th>
				<th>Email</th>
				<th>Trip</th>
				<th>Status</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reservation in reservations %}
				<tr>
					<td>{{ reservation.firstName }}</td>
					<td>{{ reservation.lastName }}</td>
					<td>{{ reservation.telephone }}</td>
					<td>{{ reservation.email }}</td>
					<td>{{ reservation.trip.name }}</td>
					<td>{{ reservation.status.name }}</td>

					<td class="d-flex  align-items-center gap-3">
						<a class="btn btn-info" href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
						<a class="btn btn-warning" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
						{{ include('reservation/_delete_form.html.twig') }}

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_reservation_new') }}">Create new</a>
{% endblock %}
