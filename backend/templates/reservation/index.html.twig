{% extends 'base.html.twig' %}

{% block title %}Reservation index
{% endblock %}

{% block body %}
	<h1>All Reservations</h1>

	<table class="table">
		<thead>
			<tr>
				<th>FirstName</th>
				<th>LastName</th>
				<th>Telephone</th>
				<th>Email</th>
				<th>Trip</th>
				<th>Status</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% set reservationCount = 0 %}

			{% for reservation in reservations %}
				{% set reservationCount = reservationCount + 1 %}

				<tr>
					<td>{{ reservation.firstName }}</td>
					<td>{{ reservation.lastName }}</td>
					<td>
						<a href="tel:{{ reservation.telephone }}">{{ reservation.telephone }}</a>
					</td>
					<td>{{ reservation.email }}</td>
					<td>{{ reservation.trip.name }}</td>
					<td>{{ reservation.status.name }}</td>


					<td class="d-flex  align-items-center gap-3">
						<a class="btn btn-warning" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Change status</a>
						
						{{ include('reservation/_delete_form.html.twig') }}

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no reservation found</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>
	<h5 class="my-3">Total reservations requests:
		{{ reservationCount }}</h5>

	<a class="btn btn-warning" href="/reply/new">Reply to reservation</a>

{% endblock %}
