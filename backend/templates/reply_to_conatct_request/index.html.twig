{% extends 'base.html.twig' %}

{% block title %}Reply To Conatct Request
{% endblock %}

{% block body %}
	<h1>
		All Reply To Conatct Request</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Client Name</th>
				<th>Client email</th>
				<th>Reply content</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reply_to_conatct_request in reply_to_conatct_requests %}
				<tr>
					<td>{{ reply_to_conatct_request.contact.firstName ~ " " ~ reply_to_conatct_request.contact.lastName}}</td>
					<td>{{ reply_to_conatct_request.contact.email }}</td>
					<td>{{ reply_to_conatct_request.content }}</td>
					<td class="d-flex  align-items-center gap-3">

					
						<a class="btn btn-warning"  href="{{ path('app_reply_to_conatct_request_edit', {'id': reply_to_conatct_request.id}) }}">edit</a>
						{{ include('reply_to_conatct_request/_delete_form.html.twig') }}

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no reply found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary"  href="{{ path('app_reply_to_conatct_request_new') }}">Reply to contact request</a>
{% endblock %}
