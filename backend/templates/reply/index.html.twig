{% extends 'base.html.twig' %}

{% block title %}Reply
{% endblock %}

{% block body %}
	<h1>ALL Replies
	</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Client Name</th>
				<th>Client email</th>
				<th>Reply content</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reply in replies %}
				<tr>
					<td>{{ reply.reservation.firstName ~ " "~ reply.reservation.lastName }}</td>
					<td>{{ reply.reservation.email }}</td>
					<td>{{ reply.content }}</td>
					<td class="d-flex  align-items-center gap-3">

						<a class="btn btn-warning" href="{{ path('app_reply_edit', {'id': reply.id}) }}">edit</a>
						{{ include('reply/_delete_form.html.twig') }}

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no reply found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_reply_new') }}">Reply to reservation
	</a>
{% endblock %}
