{% extends 'base.html.twig' %}

{% block title %}Trips
{% endblock %}

{% block body %}
	<h1>All trips</h1>

	{% for message in app.flashes('success') %}
		<div class="bg-success my-3">
			{{ message | join('. <br>') }}
		</div>
	{% endfor %}

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Departure</th>
				<th>ComingBack</th>
				<th>Description</th>
				<th>Price</th>
				<th>Destination</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for trip in trips %}
				<tr>
					<td>{{ trip.name }}</td>
					<td>{{ trip.departure ? trip.departure|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ trip.comingBack ? trip.comingBack|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ trip.description }}</td>
					<td>{{ trip.price }}
						â‚¬</td>
					<td>{{ trip.destination.country ~ " / " ~ trip.destination.city}}</td>
					<td class="d-flex  align-items-center gap-3">
						<a class="btn btn-info" href="{{ path('app_trip_show', {'id': trip.id}) }}">show</a>
						<a class="btn btn-warning" href="{{ path('app_trip_edit', {'id': trip.id}) }}">edit</a>
						{% include 'trip/_delete_form.html.twig' %}

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no trip found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_trip_new') }}">Create new</a>
{% endblock %}
